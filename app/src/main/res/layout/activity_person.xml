<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBerry"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topLinear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_textview"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/name_textview"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_textview"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/topLinear"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_textview"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/email_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_textview"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/email_textview"
        android:layout_toRightOf="@id/date_textview"
        android:layout_toEndOf="@id/date_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_picker_button"
        android:textSize="24sp"
        android:text="@string/update"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email_textview"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bucket_list"
        android:background="@color/colorLightBerry"
        android:layout_below="@+id/date_textview"/>

</RelativeLayout>